<div class="row">
  <%= form_with(url: login_video_path, method: :post, local: true) do %>
    <div class="form-group">
      <label>Email</label>
      <%= text_field_tag :username %>
    <div class="form-group">
      <label>Password</label>
      <%= password_field_tag :password %>
    </div>
    <%= submit_tag "Login" %>
  <% end %>
</div>